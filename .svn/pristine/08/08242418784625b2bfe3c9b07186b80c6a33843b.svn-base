<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_fm_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
         android:orientation="vertical" >
    </LinearLayout>

     <LinearLayout
            android:id="@+id/linToolBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:background="@drawable/bar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_fm_buttom_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bar_1_selected" />

            <ImageView
                android:id="@+id/iv_fm_buttom_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bar_2_normal" />

            <ImageView
                android:id="@+id/iv_fm_buttom_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bar_3_normal" />

            <ImageView
                android:id="@+id/iv_fm_buttom_4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bar_4_normal" />
            
            <ImageView
                android:id="@+id/iv_fm_buttom_5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bar_5_normal" />
        </LinearLayout>


</LinearLayout>
