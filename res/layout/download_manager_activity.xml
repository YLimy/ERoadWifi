<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_download_manager_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#256BB8"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_download_manager_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="下载管理"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_download_manager_line"
        android:layout_below="@+id/ll_download_manager_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/ll_download_manager_classify"
        android:layout_below="@+id/v_download_manager_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#256BB8"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_download_manager_loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="正在下载"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#CDCDCD" />

        <TextView
            android:id="@+id/tv_download_manager_finished"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_download_manager_line"
        android:layout_below="@+id/ll_download_manager_classify"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:background="@drawable/tab_line_green" />
    <LinearLayout 
        android:id="@+id/ll_download_manager_content"
        android:layout_below="@+id/iv_download_manager_line"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" />

</RelativeLayout>