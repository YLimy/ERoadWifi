<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/iv_item_wifi"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/menu_buttom_wifi"
        android:layout_centerVertical="true"
        android:contentDescription="@string/view_item_wifi_img"
        android:layout_marginLeft="3dp"/>
    <LinearLayout 
        android:id="@+id/ll_item_wifi"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_item_wifi"
        android:layout_alignParentRight="true">
        <TextView 
            android:id="@+id/tv_item_wifi_ssid"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:textSize="18sp"
            android:text="@string/view_item_wifi_ssid"/>
        <TextView 
            android:id="@+id/tv_item_wifi_capability"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="12sp"
            android:text="@string/view_item_wifi_capability"/>
    </LinearLayout>

</RelativeLayout>
